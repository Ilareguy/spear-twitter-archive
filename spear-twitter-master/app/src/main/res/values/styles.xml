<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/rippleColorPrimary</item>
    </style>

    <style name="SelectableItemForeground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemForegroundBorderless">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="H2">
        <item name="fontPath">fonts/WorkSans-Bold.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="H3">
        <item name="fontPath">fonts/WorkSans-Bold.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Subtitle">
        <item name="fontPath">fonts/SourceSansPro-Regular.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.015</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="Body1">
        <item name="fontPath">fonts/SourceSansPro-Regular.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

</resources>
